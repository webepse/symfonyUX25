<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Administration</title>
    {{ importmap('app') }}
    <style>
        .toggle-password-button{
            top: 0;
        }
    </style>
</head>
<body>
    <div class="col-md-4 offset-md-4 mt-5">
        <div class="card bg-light mt-5">
            <div class="card-header">
                <h4 class="card-title">
                    <i class="fas fa-lock"></i>
                    Connexion Ã  l'administration
                </h4>
            </div>
            <div class="card-body">
                {% if hasError %}
                    <div class="alert alert-warning">
                        <p>Votre login ou votre mot de passe est incorrect</p>
                    </div>
                {% endif %}
                {% if loginError %}
                    <div class="alert alert-danger">
                        {{ loginError }}
                    </div>
                {% endif %}
                <form method="POST">
                    <div class="form-group my-3"><label for="username">Email</label><input type="text" class="form-control" placeholder="Adresse email..." name="_username" id="username" value={{username}}></div>
                    <div class="form-group my-3">
                        <div class="toggle-password-container">
                            <label for="password">Password</label>
                            <input
                                    type="password"
                                    class="form-control"
                                    placeholder="Mot de passe..."
                                    name="_password"
                                    id="password"
                                    {{ stimulus_controller('symfony/ux-toggle-password/toggle-password', {

                                        buttonClasses: ['toggle-password-button'],
                                    }) }}
                            >
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary my-3"><i class="fas fa-lock-open"></i> Connexion</button>
                        <a href="{{ path('homepage')}}" class="btn btn-link">
                            <i class="fas fa-arrow-circle-left"></i>
                            Retour au site
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
